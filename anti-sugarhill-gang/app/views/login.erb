<style>
#login_form {
	width: 550px;
	margin: auto;
	border: 1px solid black;
	padding: 10px;
}
</style>

<div id="login_form">
	<% if @error %>
	<%= @error %>
	<% end %>

	<h2>Login:</h2>
	<form action="/user/login" method="post">
		<h3>Email</h3>
		<input type="text" name="email">
		<h3>Password</h3>
		<input type="password" name="password">
		<input type="submit">
	</form>
</div>